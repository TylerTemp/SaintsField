.saintsfield-advanced-dropdown-search-container {
    padding: 5px 5px 10px 5px;
}

ToolbarSearchField {
    width: 100%;
    /*padding: 0 5px;*/
    margin: 0;
}

ToolbarBreadcrumbs {
    flex-wrap: wrap;
}

Button.saintsfield-advanced-dropdown-item {
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    background-color: rgba(0, 0, 0, 0);
    margin: 0;
    padding: 0;
    cursor: link;

    border-radius: 0;
}

.saintsfield-advanced-dropdown-item.saintsfield-advanced-dropdown-item-active:hover {
    background-color: var(--unity-colors-button-background-hover);
}

.saintsfield-advanced-dropdown-item.saintsfield-advanced-dropdown-item-selected {
    /*background-color: rgb(48, 48, 48);*/
    background-color: var(--unity-colors-button-background-hover_pressed);
}

.saintsfield-advanced-dropdown-item.saintsfield-advanced-dropdown-item-selected:hover {
    /*background-color: rgb(48, 48, 48);*/
    background-color: var(--unity-colors-button-border_accent-focus);
    /*background-color: red;*/
}

.saintsfield-advanced-dropdown-item.saintsfield-advanced-dropdown-item-disabled {
    cursor: arrow;
}

