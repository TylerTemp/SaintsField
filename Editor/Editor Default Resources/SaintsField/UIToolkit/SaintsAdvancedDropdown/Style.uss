.saintsfield-advanced-dropdown-item.saintsfield-advanced-dropdown-item-keyboard-active {
    background-color: var(--unity-colors-button-background-hover);
}

.saintsfield-advanced-dropdown-separator {
    height: 2px;
    background-color: rgb(89, 89, 89);
}

.saintsfield-advanced-dropdown-anim {
    transition-duration: 0.2s;
    /*transition-duration: 30s;*/
    transition-delay: 0s;
    transition-timing-function: ease;
    transition-property: translate;
}

.saintsfield-advanced-dropdown-anim-in-view {
    translate: 0 0;
}

.saintsfield-advanced-dropdown-anim-right {
    translate: 100% 0;
}

.saintsfield-advanced-dropdown-anim-left {
    translate: -100% 0;
}

.saintsfield-advanced-dropdown-fade-out-container {
    position: absolute;
}
